{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2015",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "comic-ui": ["src"],
    },
    "typeRoots": ["./src/type/index.d.ts"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "esm", "dist", "typings", "**/__test__", "test", "tests"]
}
